<!DOCTYPE html>
<html>

<% include partials/head.ejs %>

<body>
    <style>
        body {
            background: linear-gradient(-45deg,
                red, blue, green, yellow, pink, white, red);
            background-size: 800% 800%;
            animation: rainbowBG 20s ease infinite;
            min-height: 100vh;
            margin: 0;
        }

        @keyframes rainbowBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .ui.segment {
            background: rgba(0, 0, 0, 0.7);
            border: none;
            position: relative;
            overflow: hidden;
            border-radius: 15px;
        }

        .ui.segment::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(60deg,
                red, blue, green, yellow, pink, white, red);
            background-size: 600% 600%;
            animation: rainbowBorder 10s linear infinite;
            z-index: -1;
            border-radius: 17px;
        }

        @keyframes rainbowBorder {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        .online-header {
            color: #00ff00 !important;
            font-weight: 900;
            font-size: 1.8em;
            text-shadow: 0 0 8px #00ff00;
        }

        .offline-header {
            color: #ff3333 !important;
            font-weight: 900;
            font-size: 1.8em;
            text-shadow: 0 0 8px #ff3333;
        }

        .ui.dividing.header {
            position: relative;
            padding-bottom: 10px;
        }

        .ui.dividing.header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg,
                red, blue, green, yellow, pink, white, red);
            background-size: 600% 100%;
            animation: rainbowHeader 6s linear infinite;
        }

        @keyframes rainbowHeader {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        .ui.table {
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border-radius: 10px;
            overflow: hidden;
        }

        .ui.table thead th {
            background: rgba(0, 0, 0, 0.7);
            color: white !important;
            font-weight: 600;
            text-transform: uppercase;
        }

        .ui.table tbody tr {
            transition: all 0.3s;
            background: rgba(255, 255, 255, 0.05);
        }

        .ui.table tbody tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.1);
        }

        .ui.table tbody tr:hover {
            background: rgba(255, 255, 255, 0.2) !important;
            transform: translateX(5px);
        }

        .ui.button.blue {
            background: linear-gradient(45deg,
                red, blue, green, yellow, pink, white, red);
            background-size: 600% 600%;
            animation: rainbowButton 7s linear infinite;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            transition: all 0.3s;
        }

        @keyframes rainbowButton {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        .ui.button.blue:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
        }

        i.flag {
            transition: all 0.3s;
            transform: scale(1);
        }

        i.flag:hover {
            transform: scale(1.3) rotate(5deg);
            filter: drop-shadow(0 0 3px gold);
        }
    </style>

    <!-- ‚úÖ Google Analytics (Optional) -->
    <script>
        gtag('event', 'screen_view', {
            'screen_name': 'devices',
            'app_name': 'ZeroDarkNexus'
        });

        gtag('event', 'devicecount', {
            'devicesonline': <%= clientsOnline.length %>,
            'devicesoffline': <%= clientsOffline.length %>,
        });
    </script>

    <div class="ui container">
        <% include partials/header.ejs %>

        <div class="ui segment">

            <!-- ‚úÖ ONLINE DEVICES -->
            <h3 class="ui dividing header online-header">
                üåê Online Devices (<%= clientsOnline.length %>)
            </h3>

            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>IP</th>
                        <th>Device</th>
                        <th>Last Seen</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientsOnline.forEach((item) => { 
                       let lsdate = new Date(item.lastSeen);
                       let flagCss = (item.dynamicData.clientGeo.country !== undefined) ? ('flag ' + item.dynamicData.clientGeo.country).toLowerCase() : 'icon question mark' 
                       let deviceStr = '';
                       deviceStr += (item.dynamicData.device.manufacture !== undefined) ? item.dynamicData.device.manufacture :  ''; 
                       deviceStr += (item.dynamicData.device.model !== undefined) ? ' (' + item.dynamicData.device.model + ')' :  ''; 
                    %>
                    <tr>
                        <td class="collapsing"><%= item.clientID %></td>
                        <td class="collapsing"><i class="<%= flagCss %>"></i></td>
                        <td class="collapsing"><%= item.dynamicData.clientIP %></td>
                        <td><%= deviceStr %></td>
                        <td class="collapsing"><%= lsdate.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
                        <td class="collapsing">
                            <a href="/manage/<%= item.clientID %>/info" class="ui button blue">Manage</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- ‚úÖ OFFLINE DEVICES -->
            <h3 class="ui dividing header offline-header">
                üö´ Offline Devices (<%= clientsOffline.length %>)
            </h3>

            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>IP</th>
                        <th>Device</th>
                        <th>Last Seen</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientsOffline.forEach((item) => { 
                       let lsdate = new Date(item.lastSeen);
                       let flagCss = (item.dynamicData.clientGeo.country !== undefined) ? ('flag ' + item.dynamicData.clientGeo.country).toLowerCase() : 'icon question mark' 
                       let deviceStr = '';
                       deviceStr += (item.dynamicData.device.manufacture !== undefined) ? item.dynamicData.device.manufacture :  ''; 
                       deviceStr += (item.dynamicData.device.model !== undefined) ? ' (' + item.dynamicData.device.model + ')' :  ''; 
                    %>
                    <tr>
                        <td class="collapsing"><%= item.clientID %></td>
                        <td class="collapsing"><i class="<%= flagCss %>"></i></td>
                        <td class="collapsing"><%= item.dynamicData.clientIP %></td>
                        <td><%= deviceStr %></td>
                        <td class="collapsing"><%= lsdate.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
                        <td class="collapsing">
                            <a href="/manage/<%= item.clientID %>/info" class="ui button blue">Manage</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <% include partials/footer.ejs %>
    </div>
</body>

</html>
